{
    "compilerOptions": {
      "target": "es2020",                          
      "module": "commonjs",                    
      "lib": ["es2020"],                     
      "allowJs": true,
      "outDir": "build",                          
      "rootDir": "src",
      "strict": true,         
      "noImplicitAny": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "downlevelIteration": true,
      "skipLibCheck": true
    },
    "exclude": ["node_modules", "build", "prisma.config.ts", "prisma.config.js"]
  }